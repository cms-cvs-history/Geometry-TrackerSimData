<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<!-- Victoria Martin 11May05 -->


<ConstantsSection label="pixfwdPanel3LX.xml" eval="true">
   <Constant name="zero"               value="0.0*fm"/>
   <Constant name="PanelMotherT"       value="[pixfwdPanel:PanelThickness]+[pixfwdplaq:PlaquetteT]"/>
   <Constant name="PanelY"             value="([pixfwdPanel:PanelThickness]-[PanelMotherT])/2"/>
   <Constant name="PlaquetteY"         value="([PanelMotherT]-[pixfwdplaq:PlaquetteT])/2"/>
   <Constant name="PlaquetteZ1"        value="([pixfwdPanel:PanelLength]/2-16.409*mm)"/>
   <Constant name="PlaquetteZ2"        value="([pixfwdPanel:PanelLength]/2-45.723*mm)"/>
   <Constant name="PlaquetteZ3"        value="([pixfwdPanel:PanelLength]/2-75.081*mm)"/>
</ConstantsSection>


<SolidSection label="pixfwdPanel3LX.xml">
      <Trd1 name = "PixelForwardPanel3LX"
              dx1  = "[pixfwdPanel:PanelWidth1]/2"
              dx2  = "[pixfwdPanel:PanelWidth2]/2"
              dy1  = "[PanelMotherT]/2"
              dy2  = "[PanelMotherT]/2"
              dz   = "[pixfwdPanel:PanelLength]/2"
               />
</SolidSection>

<LogicalPartSection label="pixfwdPanel3LX.xml">
      <LogicalPart name =     "PixelForwardPanel3LX" 
                category = "unspecified">
      <rSolid name="PixelForwardPanel3LX"/>
      <rMaterial name="materials:Air"/>
    </LogicalPart>
</LogicalPartSection>


<RotationSection label="pixfwdPanel3LX.xml">
 <Rotation name="PlaquetteRot" thetaX="90*deg" phiX="180*deg" 
 thetaY="0*deg" phiY="0*deg" thetaZ="90*deg" phiZ="90*deg" />
</RotationSection>


<PosPartSection label="pixfwdPanel3LX.xml">
 <PosPart copyNumber="1">
   <rParent name="PixelForwardPanel3LX"/>
   <rChild name="pixfwdPanel:PixelForwardPanel"/>
   <Translation x="[zero]" y="[PanelY]" z="[zero]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="PixelForwardPanel3LX"/>
   <rChild name="pixfwdplaq2x5:PixelForwardPlaquette2x5"/>
   <rRotation name="pixfwdPanel3LX:PlaquetteRot"/>
   <Translation x="[zero]" y="[PlaquetteY]" z="[PlaquetteZ1]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="PixelForwardPanel3LX"/>
   <rChild name="pixfwdplaq2x4:PixelForwardPlaquette2x4"/>
   <rRotation name="pixfwdPanel3LX:PlaquetteRot"/>
   <Translation x="[zero]" y="[PlaquetteY]" z="[PlaquetteZ2]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="PixelForwardPanel3LX"/>
   <rChild name="pixfwdplaq2x3:PixelForwardPlaquette2x3"/>
   <rRotation name="pixfwdPanel3LX:PlaquetteRot"/>
   <Translation x="[zero]" y="[PlaquetteY]" z="[PlaquetteZ3]" />
 </PosPart>
</PosPartSection>

</DDDefinition>
